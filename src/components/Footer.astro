---
import { Image } from "astro:assets";
import logo from "../assets/logo.svg";
import LinkedIn from "./Icons/LinkedIn";
import Twitter from "./Icons/Twiiter";
import Medium from "./Icons/Medium";
import Github from "./Icons/Github";
---

<footer class="w-full px-2.5 md:px-5 lg:px-10 xl:px-0 xl:max-w-[1140px] mx-auto">
  <div class="line w-full"></div>
  <div class="pt-[90px] pb-3.5 sm:py-[38px] flex flex-col-reverse sm:flex-row justify-between gap-[60px] sm:gap-0">
    <div class="flex flex-col sm:flex-row gap-[18px] items-center">
      <Image src={logo} alt="Code & Ledger Logo" width="59" height="24" />
      <span class="font-inter font-normal text-[#787CAC] text-sm"
        >Copyright 2024 Â© Code & Ledger</span
      >
    </div>
    <div class="flex items-center gap-6 justify-center sm:justify-normal">
      <a
        href="/"
        class="text-text hover:text-textAccent transition-all"
        aria-label="Linked In"><LinkedIn /></a
      >
      <a
        href="/"
        class="text-text hover:text-textAccent transition-all"
        aria-label="Twitter"><Twitter /></a
      >
      <a
        href="/"
        class="text-text hover:text-textAccent transition-all"
        aria-label="Medium"><Medium /></a
      >
      <a
        href="/"
        class="text-text hover:text-textAccent transition-all"
        aria-label="Github"><Github /></a
      >
    </div>
  </div>
</footer>
